<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colargtech.countonme">

    <application
        android:name=".CountOnMeApp"
        android:allowBackup="true"
        android:icon="@drawable/calendar_plus"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.home.view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.action.ActionActivity" />
        <activity android:name=".ui.action.create_action.CreateActionActivity" />
    </application>

</manifest>